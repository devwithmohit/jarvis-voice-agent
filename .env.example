# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voice_agent
DB_USER=agent
DB_PASSWORD=changeme_generate_secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security & Authentication
JWT_SECRET=changeme_generate_random_256bit_string
ENCRYPTION_KEY=changeme_generate_32_byte_key_base64
SESSION_TIMEOUT_HOURS=24

# AI/LLM Configuration
# OpenRouter (fallback for cloud LLM access)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct

# Self-hosted LLM (vLLM)
VLLM_ENDPOINT=http://localhost:8001/v1
VLLM_MODEL=meta-llama/Meta-Llama-3-8B-Instruct

# Speech-to-Text (Whisper)
WHISPER_MODEL=base.en  # tiny, base, small, medium, large-v3
WHISPER_DEVICE=cpu     # cpu, cuda
WHISPER_COMPUTE_TYPE=int8  # int8, float16, float32

# Text-to-Speech
TTS_PROVIDER=coqui  # coqui, elevenlabs
TTS_MODEL=tts_models/en/vctk/vits  # Coqui TTS model
ELEVENLABS_API_KEY=  # Optional: ElevenLabs API key
ELEVENLABS_VOICE_ID=  # Optional: Default voice ID

# Wake-word Detection
WAKEWORD_PROVIDER=openwakeword  # openwakeword, porcupine
WAKEWORD_MODEL=hey_jarvis  # Wake-word model name
WAKEWORD_THRESHOLD=0.5  # Detection threshold 0.0-1.0

# Web Services
SERPAPI_KEY=  # Optional: SerpAPI for web search
BING_SEARCH_KEY=  # Optional: Bing Search API
PLAYWRIGHT_HEADLESS=true

# Feature Flags
ENABLE_LEARNING=true
ENABLE_WEB_SEARCH=true
ENABLE_BROWSER_AUTOMATION=true
ENABLE_OS_COMMANDS=false  # Dangerous - requires explicit opt-in
ENABLE_FILE_OPERATIONS=true

# Privacy & Compliance
DATA_RETENTION_DAYS=90
EPISODIC_SUMMARY_FREQUENCY=weekly
AUTO_DELETE_EXPIRED_SESSIONS=true
ALLOW_DATA_EXPORT=true

# Rate Limiting (requests per hour)
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_WEB_SEARCH=50
RATE_LIMIT_BROWSER_AUTOMATION=20
RATE_LIMIT_FILE_OPERATIONS=200

# Logging & Monitoring
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json
ENABLE_AUDIT_LOGGING=true

# Service Ports
API_GATEWAY_PORT=8000
VOICE_GATEWAY_PORT=9000
MEMORY_SERVICE_PORT=50051
AGENT_CORE_PORT=50052
STT_SERVICE_PORT=50053
TTS_SERVICE_PORT=50054
TOOL_EXECUTOR_PORT=50055
WEB_SERVICE_PORT=50056

# Development Settings
DEBUG_MODE=false
RELOAD_ON_CHANGE=false
ENABLE_PROFILING=false

# Vector Database (FAISS)
VECTOR_DIMENSION=384  # Dimension for sentence-transformers model
VECTOR_INDEX_TYPE=IVFFlat  # Flat, IVFFlat, HNSW
EMBEDDING_MODEL=all-MiniLM-L6-v2  # sentence-transformers model

# Performance Tuning
MAX_WORKERS=4
GRPC_MAX_CONNECTIONS=100
REDIS_MAX_CONNECTIONS=50
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# External Service Timeouts (seconds)
LLM_TIMEOUT=30
STT_TIMEOUT=10
TTS_TIMEOUT=15
WEB_SEARCH_TIMEOUT=5
BROWSER_TIMEOUT=30
TOOL_EXECUTION_TIMEOUT=60
